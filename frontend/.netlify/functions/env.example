# Configurações DocuSign (nomes atualizados)
DOCUSIGN_ACCOUNT_ID=your_account_id_here
DOCUSIGN_USER_ID=your_user_id_here
DOCUSIGN_IK=your_integration_key_here # (Integration Key / Client ID)

# Uma das duas formas de prover a chave privada:
# 1) Base64 do PEM completo (recomendado no Netlify)
DOCUSIGN_RSA_PEM_AS_BASE64=base64_of_private_pem
# 2) PEM em texto (com \n escapado)
# DOCUSIGN_RSA_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----

# Base path do OAuth/Auth server (ex: account-d.docusign.com)
DOCUSIGN_AUTH_SERVER=account-d.docusign.com
# Opcional: caminho REST base (fallback)
DOCUSIGN_BASE_PATH=https://demo.docusign.net/restapi

# Escopos para JWT Grant
DOCUSIGN_IAM_SCOPES=signature,impersonation,aow_manage

# DocuSign Maestro (beta)
DOCUSIGN_MAESTRO_BASE_URL=https://api-d.docusign.net/maestro/v1

# Configurações de Logging
LOG_LEVEL=info
ENABLE_AUDIT_LOG=true
LOG_DOCUSIGN_REQUESTS=true

# Configurações de Segurança
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=100
ENABLE_CORS=true
ALLOWED_ORIGINS=https://crispy-octo-spoon.netlify.app,https://*.netlify.app

# Configurações do Netlify
NODE_ENV=production

# Configurações do Supabase (para as funções de clientes)
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Configurações de Cache e Logging
ENABLE_CACHE=false
CACHE_TTL=300
ENABLE_QUERY_LOG=true
